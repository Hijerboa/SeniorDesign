{
  "openapi": "3.0.2",
  "info": {
    "description": "This is the API docs for the Senior Design Project",
    "version": "1.0.0",
    "title": "Senior Design API",
    "contact": {
      "email": "nick@nickcleary.tech"
    }
  },
  "tags": [
    {
      "name": "User",
      "description": "User administration operations"
    },
    {
      "name": "Twitter",
      "description": "Twitter task operations"
    },
    {
      "name": "Propublica",
      "description": "Propublica API Tasks"
    }
  ],
  "paths": {
    "/user/me": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Return information about user",
        "description": "Returns information about currently logged in user (can also be used to validate API key)",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/twitter/tweets/stream/search": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The query to search for in recent tweets"
          },
          {
            "in": "query",
            "name": "start",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Start date to search",
            "example": "2020-08-31"
          },
          {
            "in": "query",
            "name": "end",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Start date to search",
            "example": "2020-08-31"
          }
        ],
        "tags": [
          "Twitter"
        ],
        "summary": "Launch a search on the twitter API",
        "description": "Launch a search on the twitter API with the specified query for the past week of tweets",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/twitter/tweets/archive/search": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The query to search for in recent tweets"
          },
          {
            "in": "query",
            "name": "start",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Start date to search",
            "example": "2020-08-31"
          },
          {
            "in": "query",
            "name": "end",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Start date to search",
            "example": "2020-08-31"
          }
        ],
        "tags": [
          "Twitter"
        ],
        "summary": "Launch a search on the twitter API",
        "description": "Launch a search on the twitter API with the specified query in the specified time frame",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/twitter/users/lookup/by_id/single": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The user ID to look up on twitter"
          }
        ],
        "tags": [
          "Twitter"
        ],
        "summary": "Get information about a twitter user",
        "description": "Gather user information about a twitter user and store it",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/twitter/users/lookup/by_id/multiple": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "user_ids",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Comma seperated list of user IDs to search"
          }
        ],
        "tags": [
          "Twitter"
        ],
        "summary": "Get information about twitter users",
        "description": "Get information about up to 100 twitter users",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/twitter/users/lookup/by_username/single": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "username",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The username to look up on twitter"
          }
        ],
        "tags": [
          "Twitter"
        ],
        "summary": "Get information about a twitter user",
        "description": "Gather user information about a twitter user and store it",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    },
    "/propublica/bills/{congress}/{chamber}": {
      "get": {
        "tags": [
          "Propublica"
        ],
        "summary": "Get bills from propublica",
        "description": "Launches async task to retrieve bills from specified congress and chamber",
        "parameters": [
          {
            "required": true,
            "schema": {
              "title": "congress",
              "type": "integer"
            },
            "name": "congress",
            "in": "path",
            "description": "Between 109 and 117"
          },
          {
            "required": true,
            "schema": {
              "title": "chamber",
              "type": "string"
            },
            "name": "chamber",
            "in": "path",
            "description": "senate or house"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskInitiated"
                }
              }
            }
          }
        },
        "security": [
          {
            "HTTPBearer": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "TaskInitiated": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "description": "The role the user is defined with"
          }
        }
      }
    },
    "securitySchemes": {
      "HTTPBearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "externalDocs": {
